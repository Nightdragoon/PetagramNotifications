<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.miMascota_Fragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
               android:id="@+id/cvCardView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="200dp"
                       android:layout_height="200dp"
                       android:id="@+id/imgAnimal4"
                       android:scaleType="centerCrop"
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/perro2" />
                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_gravity="center_vertical"
                           android:id="@+id/cvPerroNombre4"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/perroNombre"
                           android:textStyle="bold"
                           android:textSize="@dimen/cvPerroNombre"
                           android:layout_marginTop="@dimen/cvLikes"/>


                   </LinearLayout>
               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.recyclerview.widget.RecyclerView
               android:layout_below="@+id/cvCardView"
               android:layout_marginTop="40dp"
               android:id="@+id/tcMiFoto"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           </androidx.recyclerview.widget.RecyclerView>

       </RelativeLayout>


   </RelativeLayout>


</FrameLayout>