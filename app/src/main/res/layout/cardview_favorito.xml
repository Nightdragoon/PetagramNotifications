<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius = "@dimen/cvRadius"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imgAnimal2"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/perro2" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnLikeButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like_bone"/>
            <TextView
                android:id="@+id/cvPerroNombre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perroNombre"
                android:textStyle="bold"
                android:textSize="@dimen/cvPerroNombre"
                android:layout_marginTop="@dimen/cvLikes"/>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>