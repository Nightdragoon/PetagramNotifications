<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imgAnimal3"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/perro2" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnLikeButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like_bone"/>
            <TextView
                android:id="@+id/cvPerroNombre3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perroNombre"
                android:textStyle="bold"
                android:textSize="@dimen/cvPerroNombre"
                android:layout_marginTop="@dimen/cvLikes"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>